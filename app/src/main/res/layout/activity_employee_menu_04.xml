<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="16.7dp"
            android:layout_height="16.7dp"
            android:layout_marginLeft="12.7dp"
            android:layout_marginTop="25.3dp"
            android:src="@drawable/index_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="22.7dp"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:text="@string/employee_04_activity_title"
            android:textColor="#16133e"
            android:textSize="18.7sp" />



        <Button
            android:id="@+id/btn_employee_04_activity_camera"
            android:layout_alignParentRight="true"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="카메라"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="14dp">
        <TextView
            android:id="@+id/tv_aos05_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical|left"
            android:paddingLeft="11.3dp"
            android:text=""
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="12sp"
            android:textColor="#aaa6e7"/>

        <EditText
            android:id="@+id/et_employee_04_activity_barcode_search"
            android:layout_width="0dp"
            android:layout_height="26.3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="12sp"
            android:background="@color/white"
            android:singleLine="true"
            android:inputType="number"
            android:windowSoftInputMode="adjustResize|adjustPan"/>


        <RelativeLayout
            android:id ="@+id/rl_employee_04_activity_barcode_search"
            android:layout_width="40.7dp"
            android:layout_height="26.3dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_btn_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.7dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6.2sp"
                android:layout_centerInParent="true"
                android:text="찾기"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="바코드"
            android:textColor="#6f87ee"
            android:layout_marginLeft="35.7dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="15.7sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_employee_04_activity_model_barcode"
            android:text=""
            android:textColor="#494762"
            android:layout_marginLeft="35.7dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="18.7sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_employee_04_activity_model_name"
                android:text=""
                android:textColor="#494762"
                android:layout_marginLeft="35.7dp"
                android:fontFamily="@font/nanum_gothic_bold"
                android:textSize="18.7sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="41.7dp"
                android:id="@+id/tv_employee_04_activity_model_gas_type"
                android:text=""
                android:textColor="#494762"
                android:layout_marginLeft="35.7dp"
                android:fontFamily="@font/nanum_gothic_bold"
                android:textSize="18.7sp"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="13dp"
        android:background="@color/line_grey"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작업일시"
            android:textColor="#6f87ee"
            android:layout_marginLeft="35.7dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="15.7sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_employee_04_activity_date"
            android:text=""
            android:textColor="#494762"
            android:layout_marginLeft="35.7dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="18.7sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="13dp"
        android:background="@color/line_grey"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작업자"
            android:textColor="#6f87ee"
            android:layout_marginLeft="35.7dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="15.7sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_employee_04_activity_pad_no"
            android:text=""
            android:textColor="#494762"
            android:layout_marginLeft="35.7dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="18.7sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="13dp"
        android:background="@color/line_grey"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대리점"
                android:textColor="#6f87ee"
                android:layout_marginLeft="35.7dp"
                android:fontFamily="@font/nanum_gothic_bold"
                android:textSize="15.7sp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_employee_04_activity_cust_name"
                android:text=""
                android:textColor="#494762"
                android:layout_marginLeft="35.7dp"
                android:fontFamily="@font/nanum_gothic_bold"
                android:textSize="18.7sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_employee_04_activity_cust_name"
                android:layout_marginRight="41.7dp"
                android:id="@+id/tv_employee_04_activity_cust_code"
                android:text=""
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nanum_gothic_bold"
                android:textSize="18.7sp"/>
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="13dp"
        android:background="@color/line_grey"/>

</LinearLayout>