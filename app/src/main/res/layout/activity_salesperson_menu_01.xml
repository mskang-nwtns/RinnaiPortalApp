<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:layout_width="16.7dp"
                android:layout_height="16.7dp"
                android:layout_marginLeft="12.7dp"
                android:layout_marginTop="25.3dp"
                android:src="@drawable/index_item" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="22.7dp"
                android:fontFamily="@font/nanum_gothic_extra_bold"
                android:text="@string/employee_02_activity_title"
                android:textColor="#16133e"
                android:textSize="18.7sp" />

            <RelativeLayout
                android:id="@+id/rl_salesperson_01_date"
                android:layout_width="170dp"
                android:layout_height="26.3dp"
                android:layout_marginTop="20.7dp"
                android:layout_marginRight="17dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/calendar_selector">
                <TextView
                    android:id="@+id/tv_salesperson_01_sale_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="12.7sp"
                    android:textColor="#4564e8"
                    android:text="2019/09/26"/>

                <ImageView
                    android:layout_width="16.7dp"
                    android:layout_height="16.7dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calendar_bt" />
            </RelativeLayout>

            <!--<Button
                android:id="@+id/btn_calendar"
                android:layout_alignParentRight="true"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic_extra_bold"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text=""/>
            -->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="11.3dp"
                android:text="아이템"
                android:fontFamily="@font/nanum_gothic_bold"
                android:textSize="12sp"
                android:textColor="#61607b"/>
            <Spinner
                android:id="@+id/sp_master"
                android:layout_weight="7"
                android:spinnerMode="dropdown"
                android:layout_width="200dp"
                android:layout_height="36dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="11.3dp"
                android:text="대분류"
                android:fontFamily="@font/nanum_gothic_bold"
                android:textSize="12sp"
                android:textColor="#61607b"/>
            <Spinner
                android:id="@+id/sp_sub"
                android:layout_weight="7"
                android:spinnerMode="dropdown"
                android:layout_width="200dp"
                android:layout_height="36dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34.7dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_search_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/text_view_header_row_one"
                android:gravity="center"
                android:text="모델명"
                android:textSize="16sp"
                android:fontFamily="@font/nanum_gothic_bold"
                android:textColor="#3d3c49"
                android:lineSpacingExtra="-11sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/text_view_header_row_two"
                android:fontFamily="@font/nanum_gothic_bold"
                android:gravity="center"
                android:lineSpacingExtra="-11sp"
                android:text="가스"
                android:textColor="#6c66b4"
                android:textSize="16sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/text_view_header_row_one"
                android:gravity="center"
                android:text="주문가능"
                android:fontFamily="@font/nanum_gothic_bold"
                android:textSize="16sp"
                android:textColor="#6c66b4"
                android:lineSpacingExtra="-11sp" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="85"
            android:orientation="horizontal"
            android:layout_marginLeft="12.7dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="15.3dp"
            android:paddingTop="3.7dp">

            <ListView
                android:id="@+id/lv_stock_orderable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:divider="#c7c8ca"
                android:dividerHeight="1px"
                android:groupIndicator="@null"
                android:listSelector="@android:color/transparent"
                android:scrollbars="vertical" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="16dp"
            android:background="@color/text_view_header_row_one"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/rl_salesperson_01_phonenubmer_01">
                <TextView
                    android:id="@+id/tv_salesperson_01_phonenubmer_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/nanum_gothic_bold"
                    android:textColor="#848491" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl_salesperson_01_phonenubmer_02">
                <TextView
                    android:id="@+id/tv_salesperson_01_phonenubmer_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/nanum_gothic_bold"
                    android:textColor="#848491"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_salesperson_01_water_mark_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:layout_marginLeft="-170dp"
            android:layout_marginRight="-170dp"
            android:textSize="35sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="#848491"
            android:alpha="0.3"
            android:rotation="-50"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"/>
        <TextView
            android:id="@+id/tv_salesperson_01_water_mark_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="-150dp"
            android:layout_marginRight="-150dp"
            android:textSize="35sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="#848491"
            android:alpha="0.3"
            android:rotation="-50"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_salesperson_01_water_mark_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="-100dp"
            android:layout_marginRight="-100dp"
            android:textSize="35sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="#848491"
            android:alpha="0.3"
            android:rotation="-50"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"/>
    </RelativeLayout>
</RelativeLayout>