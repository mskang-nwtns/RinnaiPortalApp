<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="16.7dp"
            android:layout_height="16.7dp"
            android:layout_marginLeft="12.7dp"
            android:layout_marginTop="25.3dp"
            android:src="@drawable/index_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="22.7dp"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:text="@string/employee_05_activity_title"
            android:textColor="#16133e"
            android:textSize="18.7sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="14dp">
        <TextView
            android:id="@+id/tv_aos05_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical|left"
            android:paddingLeft="11.3dp"
            android:text=""
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="12sp"
            android:textColor="#aaa6e7"/>

        <EditText
            android:id="@+id/et_search_value"
            android:layout_width="0dp"
            android:layout_height="26.3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="12sp"
            android:background="@color/white"
            android:singleLine="true"
            android:windowSoftInputMode="adjustResize|adjustPan"/>


        <RelativeLayout
            android:id = "@+id/btn_aos05_search"
            android:layout_width="40.7dp"
            android:layout_height="26.3dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_btn_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.7dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6.2sp"
                android:layout_centerInParent="true"
                android:text="찾기"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="14dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical|left"
            android:paddingLeft="11.3dp"
            android:text="재고구분"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="12sp"
            android:textColor="#61607b"/>
        <Spinner
            android:id="@+id/sp_stock_type"
            android:layout_weight="7"
            android:spinnerMode="dropdown"
            android:layout_width="200dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="14dp">
        <ImageView
            android:layout_width="12.7dp"
            android:layout_height="12.7dp"
            android:background="@color/red"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="85.3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical|right"
            android:paddingLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:text="실출고 가능한 수량"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="12sp"
            android:textColor="#737288"/>
        <ImageView
            android:layout_width="12.7dp"
            android:layout_height="12.7dp"
            android:background="@color/employee_menu_03_store_stock_value"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical|right"
            android:paddingLeft="11.3dp"
            android:text="양판점 전용 재고"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="12sp"
            android:textColor="#737288"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34.7dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_search_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:background="@color/text_view_header_row_one"
            android:gravity="center"
            android:text="창고"
            android:textSize="16sp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textColor="#3d3c49"
            android:lineSpacingExtra="-11sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@color/text_view_header_row_two"
            android:gravity="center"
            android:text="LPG"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="16sp"
            android:textColor="#6c66b4"
            android:lineSpacingExtra="-11sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@color/text_view_header_row_one"
            android:gravity="center"
            android:text="LNG"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="16sp"
            android:textColor="#3d3c49"
            android:lineSpacingExtra="-11sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@color/text_view_header_row_two"
            android:gravity="center"
            android:text="기타"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="16sp"
            android:textColor="#6c66b4"
            android:lineSpacingExtra="-11sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@color/text_view_header_row_one"
            android:gravity="center"
            android:text="합계"
            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="16sp"
            android:textColor="#3d3c49"
            android:lineSpacingExtra="-11sp" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="85"
        android:orientation="horizontal"
        android:layout_marginLeft="12.7dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="15.3dp"
        android:paddingTop="3.7dp">

        <ListView
            android:id="@+id/lv_stock_warehouse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:groupIndicator="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="vertical"
            android:dividerHeight="1px"
            android:divider="#c7c8ca"/>
    </LinearLayout>

</LinearLayout>