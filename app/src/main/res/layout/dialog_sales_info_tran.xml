<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350.5dp"
    android:layout_height="560dp"
    android:orientation="vertical"
    android:background="@drawable/login_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16.7dp"
            android:layout_height="16.7dp"
            android:layout_marginLeft="12.7dp"
            android:layout_marginTop="25.3dp"
            android:src="@drawable/index_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="22.7dp"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:text="@string/agency_04_activity_dialog_title"
            android:textColor="#16133e"
            android:textSize="18.7sp" />

    </RelativeLayout>

    <LinearLayout

        android:layout_width="350.5dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="33.3dp"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="조치여부"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"/>

            <Spinner
                android:id="@+id/sp_sales_info_tran_measure"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="200dp"
                android:layout_height="34dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="33.3dp"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="조치일자"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:id="@+id/rl_sales_info_tran_measure_date"
                android:layout_width="200dp"
                android:layout_height="26.3dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calendar_selector">
                <TextView
                    android:id="@+id/tv_sales_info_tran_measure_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="12.7sp"
                    android:textColor="#4564e8"
                    android:text="2019/09/26"/>

                <ImageView
                    android:layout_width="16.7dp"
                    android:layout_height="16.7dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calendar_bt" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_height="33.3dp"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="판매여부"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"/>
            <Spinner
                android:id="@+id/sp_sales_info_tran_sales"
                android:spinnerMode="dropdown"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="34dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="33.3dp"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="판매일자"
                android:layout_gravity="center_vertical"/>

            <RelativeLayout
                android:id="@+id/rl_sales_info_tran_sales_date"
                android:layout_width="200dp"
                android:layout_height="26.3dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calendar_selector">
                <TextView
                    android:id="@+id/tv_sales_info_tran_sales_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="12.7sp"
                    android:textColor="#4564e8"
                    android:text="2019/09/26"/>

                <ImageView
                    android:layout_width="16.7dp"
                    android:layout_height="16.7dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calendar_bt" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_height="33.3dp"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="모델명" />
            <RelativeLayout
                android:id="@+id/rl_sales_info_tran_model_name"
                android:layout_width="200dp"
                android:layout_height="26.3dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calendar_selector">
                <EditText
                    android:id="@+id/et_sales_info_tran_model_name"
                    android:layout_width="150dp"
                    android:layout_height="26.3dp"
                    android:background="#00000000"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#4564e8"
                    android:textSize="12.7sp"
                    android:windowSoftInputMode="adjustResize|adjustPan"/>

                <RelativeLayout
                    android:id = "@+id/btn_sales_info_tran_search"
                    android:layout_width="50dp"
                    android:layout_height="26.3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/search_btn_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10.7dp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="6.2sp"
                        android:layout_centerInParent="true"
                        android:text="찾기"/>
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_height="183.3dp"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="비고"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:layout_gravity="left|top"/>
            <RelativeLayout
                android:id="@+id/rl_sales_info_tran_cus_ref"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/calendar_selector">

                <EditText
                    android:id="@+id/et_sales_info_tran_cus_ref"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:background="#00000000"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="10"
                    android:maxLines="10"
                    android:scrollHorizontally="false"
                    android:text="asdfasdfadsf"
                    android:textColor="#4564e8"
                    android:textSize="12.7sp"
                    android:windowSoftInputMode="adjustResize|adjustPan" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_height="53.3dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:id = "@+id/btn_info_tran_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="53.3dp"
                android:background="@drawable/search_btn_selector"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="6.2sp"
                    android:layout_centerInParent="true"
                    android:text="닫기"/>
            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/btn_info_tran_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="53.3dp"
                android:background="@drawable/search_btn_selector"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="6.2sp"
                    android:layout_centerInParent="true"
                    android:text="저장"/>


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>