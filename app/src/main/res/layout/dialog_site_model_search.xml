<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="450dp"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/login_bg"
        android:layout_width="350.5dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_site_model_search_detail"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center"
            android:background="@color/text_view_listview_row_value_one"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_site_model_search_select_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/nanum_gothic_extra_bold"
                android:textSize="25sp"
                android:textColor="@color/red"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="17sp"
                android:autoSizeMaxTextSize="25sp"/>

        </LinearLayout>
        <ListView
            android:id="@+id/lv_site_model_search"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="0dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_height="53.3dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:id = "@+id/btn_site_model_search_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="53.3dp"
                android:background="@drawable/search_btn_selector"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="6.2sp"
                    android:layout_centerInParent="true"
                    android:text="취소"/>
            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/btn_site_model_search_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="53.3dp"
                android:background="@drawable/search_btn_selector"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="6.2sp"
                    android:layout_centerInParent="true"
                    android:text="확인"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>