<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/employee_07_activity_list_row_client_name"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/text_view_header_row_one"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/nanum_gothic_bold"
            android:paddingLeft="3dp"
            android:textSize="11.3sp"
            android:textColor="#3d3c49"
            android:ellipsize="end"
            android:maxLines="1"
            android:lineSpacingExtra="-11sp" />

        <TextView
            android:id="@+id/employee_07_activity_list_row_model_name"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/text_view_header_row_two"
            android:fontFamily="@font/nanum_gothic_bold"
            android:gravity="left|center_vertical"
            android:paddingLeft="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#3d3c49"
            android:textSize="11.3sp" />
        <TextView
            android:id="@+id/employee_07_activity_list_row_qty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/text_view_header_row_one"
            android:gravity="center"

            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="11.3sp"
            android:textColor="#5a5ac3"/>
        <TextView
            android:id="@+id/employee_07_activity_list_row_sale_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/text_view_header_row_two"
            android:gravity="center"

            android:fontFamily="@font/nanum_gothic_bold"
            android:textSize="11.3sp"
            android:textColor="#5a5ac3"/>
        <TextView
            android:id="@+id/employee_07_activity_list_row_out_req_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/text_view_header_row_one"
            android:fontFamily="@font/nanum_gothic_bold"
            android:gravity="center"

            android:lineSpacingExtra="-11sp"
            android:textColor="#3d3c49"
            android:textSize="11.3sp" />

    </LinearLayout>
</LinearLayout>