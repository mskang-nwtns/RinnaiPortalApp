<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/ll_reading_info_model_name">
    <TextView
        android:id="@+id/tv_reading_info_model_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/text_view_header_row_one"
        android:fontFamily="@font/nanum_gothic_extra_bold"
        android:text="모델명"
        android:gravity="center"
        android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/ll_reading_info_header"
        android:layout_below="@+id/ll_reading_info_model_name">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/text_view_header_row_two"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:text="보증번호"
            android:gravity="center"
            android:textSize="15.7dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/text_view_header_row_one"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:text="상태"
            android:gravity="center"
            android:textSize="15.7dp" />

        
    </LinearLayout>

    <ListView
        android:id = "@+id/lv_wms_menu_reading_info"
        android:layout_below="@+id/ll_reading_info_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"/>
    <RelativeLayout
        android:id = "@+id/btn_wms_menu_reading_info_close"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/search_btn_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10.7dp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="6.2sp"
            android:layout_centerInParent="true"
            android:text="닫기"/>
    </RelativeLayout>
</RelativeLayout>