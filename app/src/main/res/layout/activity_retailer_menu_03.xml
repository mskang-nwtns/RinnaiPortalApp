<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="7"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16.7dp"
            android:layout_height="16.7dp"
            android:layout_marginLeft="12.7dp"
            android:layout_marginTop="25.3dp"
            android:src="@drawable/index_item" />

        <TextView
            android:id="@+id/tv_sie_activity_01_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="22.7dp"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:text="@string/title_retailer_release_agency_instatllation"
            android:textColor="#16133e"
            android:textSize="18.7sp" />

        <ImageView
            android:layout_width="76.7dp"
            android:layout_height="31.3dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22.7dp"
            android:layout_marginRight="20.7dp"
            android:src="@drawable/menu_01_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="12.7dp"
        android:layout_marginRight="14dp">

        <EditText
            android:id="@+id/et_reading_instructions_barcode"
            android:layout_toLeftOf="@+id/btn_reading_instructions_barcode"
            android:layout_width="330.3dp"
            android:layout_height="38.3dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@drawable/contents_area02_bg"
            android:ems="10"
            android:gravity="center_vertical|left"
            android:lineSpacingExtra="-11sp"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#4564e8"
            android:textSize="20dp" />
        <RelativeLayout
            android:id = "@+id/btn_reading_instructions_barcode"
            android:layout_width="80dp"
            android:layout_height="38.3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/search_btn_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.7dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6.2sp"
                android:layout_centerInParent="true"
                android:text="입력"/>
        </RelativeLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="85"
        android:orientation="vertical"
        android:layout_marginLeft="12.7dp"
        android:layout_marginRight="14dp">

        <RelativeLayout
            android:id="@+id/rl_agency_menu_07_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/img_area"
            android:layout_marginTop="18.3dp"
            android:layout_below="@+id/tv_image_file_1">
            <ImageView
                android:id="@+id/iv_spot_pic_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 1"
                android:src="@drawable/shooting_icon_02"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:id = "@+id/btn_add_camera_1"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/search_btn_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15.7dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="6.2sp"
                    android:layout_centerInParent="true"
                    android:text="카메라"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_retailer_menu_03_sign_parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_retailer_menu_03_sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sign_bg_active"/>

            <com.karrel.signviewlib.SignView
                android:id="@+id/sv_retailer_menu_03_sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_retailer_menu_03_sign"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id = "@+id/btn_retailer_menu_03_sign_clear"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/search_btn_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6.2sp"
                android:layout_centerInParent="true"
                android:text="서명 초기화"/>
        </RelativeLayout>

        <RelativeLayout
            android:id = "@+id/btn_retailer_menu_03_submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/search_btn_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6.2sp"
                android:layout_centerInParent="true"
                android:text="완료"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.7dp"
        android:layout_marginRight="14dp">

        <RelativeLayout
            android:id = "@+id/btn_retailer_menu_03_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/search_btn_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6.2sp"
                android:layout_centerInParent="true"
                android:text="작업내역"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>